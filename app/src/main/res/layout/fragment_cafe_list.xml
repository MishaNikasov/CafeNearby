<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cafeInteraction"
            type="com.nikasov.cafenearby.ui.adapter.CafeAdapter.Interaction" />
        <variable
            name="viewModel"
            type="com.nikasov.cafenearby.viewmodel.CafeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gold_drop">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="16dp"
            app:cafeList="@{viewModel.cafeList}"
            app:cafeInteraction="@{cafeInteraction}"
            tools:listitem="@layout/item_cafe" />

        <include
            android:id="@+id/progress"
            layout="@layout/layout_progress" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>